{
    "name": "easy-git",
    "description": "easy-git: HBuilderX内图形化Git工具，简单好用。",
    "displayName": "【easy-git】Git源码管理",
    "version": "0.0.5",
    "publisher": "oneone",
    "engines": {
        "HBuilderX": "^2.8.3"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension",
    "activationEvents": [
        "onCommand:EasyGit.main",
        "onCommand:EasyGit.log",
        "onCommand:EasyGit.clone",
        "onCommand:EasyGit.about",
        "onCommand:EasyGit.set",
        "onCommand:EasyGit.setGitingore",
        "onCommand:EasyGit.setGitattributes",
        "onView:EasyGitSourceCodeView",
        "onView:EasyGitCommonView"
    ],
    "contributes": {
        "configuration": {
            "title": "easy-git - Git源码管理",
            "properties": {
                "EasyGit.AlwaysAutoAddCommit": {
                    "type": "boolean",
                    "default": false,
                    "description": "当没有可提交的暂存更改时，总是自动暂存所有更改并直接提交。"
                },
                "EasyGit.DisableDevTools": {
                    "type": "boolean",
                    "default": true,
                    "description": "Git视图页面, 禁用右键菜单开发者工具(非必要时，请勿开启开发者工具)"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "EasyGitSourceCodeView",
                    "title": "easy-git"
                }
            ],
            "rightside": [
                {
                    "id": "EasyGitCommonView",
                    "title": "easy-git-log"
                }
            ]
        },
        "views": {
            "EasyGitSourceCodeView": [
                {
                    "id": "EasyGitSourceCodeView",
                    "title": "easy-git"
                }
            ],
            "EasyGitCommonView": [
                {
                    "id": "EasyGitCommonView",
                    "title": "easy-git-log"
                }
            ]
        },
        "commands": [
            {
                "command": "EasyGit.main",
                "title": "easy-git: 源代码管理"
            },
            {
                "command": "EasyGit.log",
                "title": "easy-git: log"
            },
            {
                "command": "EasyGit.clone",
                "title": "easy-git: clone"
            },
            {
                "command": "EasyGit.about",
                "title": "关于easy-git"
            },
            {
                "command": "EasyGit.set",
                "title": "设置easy-git"
            },
            {
                "command": "EasyGit.setGitingore",
                "title": "设置.gitignore"
            },
            {
                "command": "EasyGit.setGitattributes",
                "title": "设置.gitattributes"
            }
        ],
        "menus": {
            "explorer/context": [{
                    "command": "EasyGit.main",
                    "group": "z_commands"
                }, {
                    "command": "EasyGit.log",
                    "title": "easy-git: 查看日志",
                    "group": "z_commands"
                }, {
                    "group": "z_commands"
                }
            ],
            "editor/context": [{
                    "command": "EasyGit.log",
                    "title": "easy-git: 查看日志",
                    "group": "z_commands"
                },{
                    "group": "z_commands"
                }
            ],
            "menubar/tool": [
                {
                    "command": "EasyGit.clone",
                    "title": "Git: 克隆仓库",
                    "group": "ext_settings"
                },
                {
                    "command": "EasyGit.main",
                    "title": "Git: 源代码管理",
                    "group": "ext_settings"
                },
                {
                    "title": "easy-git",
                    "group": "ext_settings",
                    "id": "toolsMenu"
                },
                {
                    "group": "toolsMenu@1"
                },
                {
                    "command": "EasyGit.setGitingore",
                    "title": "设置.gitignore",
                    "group": "toolsMenu@2"
                },
                {
                    "command": "EasyGit.setGitattributes",
                    "title": "设置.gitattributes",
                    "group": "toolsMenu@2"
                },
                {
                    "group": "toolsMenu@3"
                },
                {
                    "command": "EasyGit.about",
                    "title": "关于/评价easy-git",
                    "group": "toolsMenu@3"
                },
                {
                    "group": "ext_settings"
                }
            ]
        }
    },
    "extensionDependencies": [
        "plugin-manager"
    ],
    "dependencies": {
        "cross-spawn": "^7.0.3",
        "ini": "^1.3.5",
        "simple-git": "^2.17.0"
    }
}
